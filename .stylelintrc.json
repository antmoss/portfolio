{
  "extends": ["stylelint-config-standard", "stylelint-config-rational-order"],
  "plugins": ["stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "selector-max-id": 0,
    "max-nesting-depth": 3,
    "no-descending-specificity": null
  },
  "ignoreFiles": ["dist/**", "build/**"]
}
